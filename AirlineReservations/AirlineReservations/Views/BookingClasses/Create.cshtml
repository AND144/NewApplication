@model AirlineReservations.Models.BookingClass

@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-7 offset-2">
                <div class="card">
                    
                        <div class="card-header">
                            <h5 class="text-center">Creați o clasă nouă</h5>  
                        </div>
                        <div class="card-body">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ClassTpye" class="control-label"></label>
                                    <input asp-for="ClassTpye" placeholder="Introduceți un nou tip de clasă, de exemplu: tipul afacerii" class="form-control" />
                                    <span asp-validation-for="ClassTpye" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    
                                    <div class="row">
                                        <div class="col-md-2">
                                            <input type="submit" value="Creați" class="btn btn-success mt-3" />
                                        </div>
                                        <div class="col-md-4">
                                            <a class="btn btn-secondary mt-3" asp-action="Index">Back to Page</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
